---
import Base from "../layouts/Base.astro";
import type { PublicShop } from "../types";
import type { Locale } from "../i18n";

const apiBase = import.meta.env.PUBLIC_API_BASE ?? "";
const shopId = import.meta.env.PUBLIC_SHOP_ID ?? "";

let shop: PublicShop | null = null;
let error = "";

if (apiBase && shopId) {
  try {
    const res = await fetch(`${apiBase.replace(/\/$/, "")}/public/shops/${shopId}`);
    if (res.ok) {
      shop = await res.json();
    } else {
      error = "Shop not found";
    }
  } catch (e) {
    error = "Failed to load shop";
  }
} else {
  error = "Missing PUBLIC_API_BASE or PUBLIC_SHOP_ID";
}
---

<Base title={shop ? (shop.name_en || shop.name_lo) : "Shop"}>
  <div class="min-h-screen bg-gray-50 flex flex-col">
    {error ? (
      <div class="flex-1 flex items-center justify-center p-4">
        <p class="text-red-600">{error}</p>
      </div>
    ) : shop ? (
      <>
        <div class="relative w-full" style="aspect-ratio: 16/9;">
          {shop.cover_image_url ? (
            <img
              src={shop.cover_image_url}
              alt=""
              class="w-full h-full object-cover object-center"
              width="1280"
              height="720"
            />
          ) : (
            <div class="w-full h-full bg-gray-300 flex items-center justify-center text-gray-500">Cover</div>
          )}
          {shop.profile_image_url && (
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-24 h-24 md:w-32 md:h-32 rounded-full border-4 border-white overflow-hidden bg-white shadow">
              <img
                src={shop.profile_image_url}
                alt=""
                class="w-full h-full object-cover"
                width="256"
                height="256"
              />
            </div>
          )}
        </div>
        <div class="flex-1 pt-14 pb-20 px-4 max-w-lg mx-auto w-full text-center">
          <div id="lang-toggle" class="flex justify-center gap-1 mb-4">
            <button type="button" data-lang="lo" class="lang-btn px-3 py-1 rounded border border-gray-300 bg-white text-sm">ລາວ</button>
            <button type="button" data-lang="en" class="lang-btn px-3 py-1 rounded border border-gray-300 bg-white text-sm">EN</button>
          </div>
          <h1 id="shop-name" class="text-xl md:text-2xl font-semibold text-gray-900 mb-2" data-lo={shop.name_lo} data-en={shop.name_en}>
            {shop.name_en}
          </h1>
          <p id="shop-bio" class="text-gray-600 whitespace-pre-line mb-6" data-lo={shop.bio_lo} data-en={shop.bio_en}>
            {shop.bio_en}
          </p>
          {(shop.social?.facebook || shop.social?.instagram || shop.social?.tiktok) && (
            <div class="flex justify-center gap-4 mb-6">
              {shop.social.facebook && (
                <a href={shop.social.facebook} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-blue-600" aria-label="Facebook">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                </a>
              )}
              {shop.social.instagram && (
                <a href={shop.social.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-pink-600" aria-label="Instagram">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                </a>
              )}
              {shop.social.tiktok && (
                <a href={shop.social.tiktok} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900" aria-label="TikTok">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88 0V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
                </a>
              )}
            </div>
          )}
        </div>
        <footer class="fixed bottom-0 left-0 right-0 p-4 bg-white border-t border-gray-200">
          <a
            id="whatsapp-btn"
            href={`https://wa.me/${shop.whatsapp_phone}?text=${encodeURIComponent(shop.whatsapp_message_en)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full max-w-md mx-auto bg-green-600 hover:bg-green-700 text-white text-center font-medium py-3 px-4 rounded-lg"
            data-msg-lo={shop.whatsapp_message_lo}
            data-msg-en={shop.whatsapp_message_en}
            data-phone={shop.whatsapp_phone}
          >
            Contact via WhatsApp
          </a>
        </footer>
      </>
    ) : null}
  </div>
  <script define:vars={{ hasShop: !!shop }}>
    if (hasShop) {
      let locale = document.documentElement.lang === "lo" ? "lo" : "en";
      const updateText = () => {
        const nameEl = document.getElementById("shop-name");
        const bioEl = document.getElementById("shop-bio");
        const btn = document.getElementById("whatsapp-btn");
        if (nameEl) {
          nameEl.textContent = nameEl.getAttribute(`data-${locale}`) || "";
        }
        if (bioEl) {
          bioEl.textContent = bioEl.getAttribute(`data-${locale}`) || "";
        }
        if (btn) {
          const msg = btn.getAttribute(`data-msg-${locale}`) || "";
          const phone = btn.getAttribute("data-phone") || "";
          btn.href = `https://wa.me/${phone}?text=${encodeURIComponent(msg)}`;
          btn.textContent = locale === "lo" ? "ຕິດຕໍ່ຜ່ານ WhatsApp" : "Contact via WhatsApp";
        }
      };
      document.querySelectorAll(".lang-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          locale = btn.getAttribute("data-lang") === "lo" ? "lo" : "en";
          document.documentElement.lang = locale === "lo" ? "lo" : "en";
          updateText();
        });
      });
      updateText();
    }
  </script>
</Base>
